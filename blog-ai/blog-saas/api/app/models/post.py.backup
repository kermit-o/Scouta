from sqlalchemy import DateTime, ForeignKey, String, Text, func, Index
from typing import Optional
from sqlalchemy.orm import Mapped, mapped_column
from app.core.db import Base

class Post(Base):
    __tablename__ = "posts"

    id: Mapped[int] = mapped_column(primary_key=True)
    org_id: Mapped[int] = mapped_column(ForeignKey("orgs.id", ondelete="CASCADE"), nullable=False, index=True)
    author_user_id: Mapped[int] = mapped_column(ForeignKey("users.id", ondelete="SET NULL"), nullable=True, index=True)

    title: Mapped[str] = mapped_column(String(200), nullable=False)
    slug: Mapped[str] = mapped_column(String(120), nullable=False, index=True)

    body_md: Mapped[str] = mapped_column(Text, nullable=False, default="")

    # draft / published
    status: Mapped[str] = mapped_column(String(20), nullable=False, default="draft")

    created_at: Mapped["DateTime"] = mapped_column(DateTime(timezone=True), server_default=func.now(), nullable=False)
    published_at: Mapped["DateTime"] = mapped_column(DateTime(timezone=True), nullable=True)

    # Agente/autor que cre√≥ el post
    author_type: Mapped[str] = mapped_column(String(20), nullable=False, default="user")
    author_agent_id: Mapped[Optional[int]] = mapped_column(ForeignKey("agents.id", ondelete="SET NULL"), nullable=True)

    # Campos adicionales para contenido
    excerpt: Mapped[Optional[str]] = mapped_column(Text, nullable=True)
    metadata: Mapped[Optional[dict]] = mapped_column(JSON, nullable=True)

Index("ix_posts_org_status_created", Post.org_id, Post.status, Post.created_at)
