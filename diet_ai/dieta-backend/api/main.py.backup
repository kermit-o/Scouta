# Dependencia para obtener sesi√≥n de BD
async def get_db():
    if not DB_AVAILABLE or AsyncSessionLocal is None:
        raise HTTPException(
            status_code=503,
            detail="Database service unavailable"
        )
    
    async with AsyncSessionLocal() as session:
        try:
            yield session
        finally:
            await session.close()

